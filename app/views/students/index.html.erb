<% cache ["student_table", Student.maximum(:updated_at)] do %>   
<div class="bg-white p-6 rounded-lg shadow-md">
<h2 class="text-2xl font-semibold text-gray-800 mb-4">Top 10 Students Of Group A</h2>
<div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-sm">
    <thead class="bg-gray-100">
        <tr>
        <th class="px-4 py-3 text-left text-sm font-medium text-gray-600 uppercase tracking-wider">SBD</th>
        <th class="px-4 py-3 text-left text-sm font-medium text-gray-600 uppercase tracking-wider">Toán</th>
        <th class="px-4 py-3 text-left text-sm font-medium text-gray-600 uppercase tracking-wider">Vật Lý</th>
        <th class="px-4 py-3 text-left text-sm font-medium text-gray-600 uppercase tracking-wider">Hóa Học</th>
        </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
        <% if @top_10_natural_science.any? %>
        <% @top_10_natural_science.each do |student| %>
            <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-4 py-3 text-sm text-gray-900"><%= student.sbd %></td>
            <td class="px-4 py-3 text-sm text-gray-900"><%= student.score_for('toan') %></td>
            <td class="px-4 py-3 text-sm text-gray-900"><%= student.score_for('vat_li') %></td>
            <td class="px-4 py-3 text-sm text-gray-900"><%= student.score_for('hoa_hoc') %></td>
            </tr>
        <% end %>
        <% else %>
        <tr>
            <td colspan="4" class="px-4 py-3 text-sm text-gray-500 text-center">No students found.</td>
        </tr>
        <% end %>
    </tbody>
    </table>
</div>
</div>
<% end %>