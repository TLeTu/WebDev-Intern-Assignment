<div class="max-w-4xl mx-auto p-6 space-y-6">
  <!-- Score Statistics Charts -->
  <% @score_counts.each do |level, counts| %>
    <% cache ["statistics_chart", level], expires_in: 1.hour do %>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4"><%= level.to_s.humanize %> Scores</h2>
        <canvas class="chart-canvas" style="max-height: 200px; width: 100%;" data-chart-data="<%= counts.to_json %>"></canvas>
      </div>
    <% end %>
  <% end %>
