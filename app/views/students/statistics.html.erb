<div class="max-w-4xl mx-auto p-6 space-y-6">
  <% @score_counts.each do |level, counts| %>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4"><%= level.to_s.humanize %></h2>
        
        <!-- Responsive chart container -->
        <div class="relative w-full h-64"> <!-- Adjust height as needed -->
          <canvas class="chart-canvas absolute inset-0" data-chart-data="<%= counts.to_json %>"></canvas>
        </div>
      </div>
  <% end %>
</div>
